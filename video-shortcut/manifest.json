{
  "manifest_version": 3,
  "name": "Video Platform Shortcuts",
  "version": "1.0",
  "description": "Show keyboard shortcuts for Netflix, Abema TV, and YouTube",
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.netflix.com/*"],
      "js": ["netflix.js"],
      "css": ["styles.css"]
    },
    {
      "matches": ["*://*.abema.tv/*"],
      "js": ["abema.js"],
      "css": ["styles.css"]
    },
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["youtube.js"],
      "css": ["styles.css"]
    },
    {
      "matches": ["*://*.amazon.com/*/video/*", "*://*.amazon.co.jp/*/video/*"],
      "js": ["amazon.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Video Platform Shortcuts"
  }
}
