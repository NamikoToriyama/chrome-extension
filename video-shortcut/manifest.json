{
  "manifest_version": 3,
  "name": "Netflix Shortcuts",
  "version": "1.0",
  "description": "Show keyboard shortcuts for Netflix",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.netflix.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Netflix Shortcuts"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}